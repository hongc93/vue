@import "./variable.styl"
// 颜色
.blue
  color: $color-blue !important
.red
  color: $color-red !important
.orange
  color: $color-orange !important
.green
  color: $color-green !important
.gray
  color: #ECF2F9 !important 
.black
  color: #000 !important 
.white
  color: $color-white !important 
.light-green
  color: $color-green-2 !important 
.black-orange
  color: $color-orange-2 !important 
//背景
.bg-white
  background-color: $color-white  !important
.bg-blue
  background-color: $color-blue  !important
  color: $color-white  !important
.bg-red
  background-color: $color-red  !important
  color: $color-white  !important
.bg-orange 
  background-color: $color-orange !important
  color: $color-white !important
.bg-green
  background-color: $color-green !important
  color: $color-white !important
.bg-grey
  background-color: $color-grey !important
  color: $color-white !important

.el-button.transparent-button
  color: $color-white
  background-color: transparent
.el-button.transparent-button.is-plain
  &:hover
    background-color: transparent
  &:focus
    background-color: transparent
.fl
  float: left
.fr
  float: right
.none
  display: none
.block
  display: block
.inline-block
  display: inline-block

.full-height
  height: 100%

.no-border
  border: 0 none

.mr10
  margin-right: 10px !important
.mb10
  margin-bottom: 10px !important
.mr20
  margin-right: 20px !important

.mt10
  margin-top: 10px !important
.mt20
  margin-top: 20px !important

.ml10
  margin-left: 10px !important
.ml20
  margin-left: 20px !important

.pd20
  padding: 20px !important
.pt10
  padding-top: 10px !important

.mauto
  margin: auto

.box-shadow
  box-shadow: 0 2px 10px 1px $color-grey-2
  border-radius: 3px
  background: #FFF

.no-wrap
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

.ov-hidden
  overflow: hidden

.border
  border: 1px solid $color-grey-13
.border-top
  border-top: 1px solid $color-grey-13