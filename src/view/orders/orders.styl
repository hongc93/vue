@import '~assets/stylus/variable.styl'
.orders
  .el-tabs__header
    margin: 0
  .el-tabs__content
    border: 1px solid #e4e7ed
    border-top: 0
  .product-list
    display: flex
    justify-content: space-between
    align-items: center
    margin-bottom: 15px
    padding: 20px 20px 0
    .basic
      display: flex
      width: 800px
      align-items: flex-start
    .name 
      font-size: $font-size-medium-1
      line-height: 20px
    .price>span 
      color: $color-red-2 
      font-size: $font-size-medium
      margin-right: 15px
    .per-unit
      margin-left: 5px
    .info>div
      margin-bottom: 10px
  .settlement
    text-align: right 
    margin-top: 20px
  .member
    font-size: 0
  .member-info
    font-size: 14px
    span 
      margin-right: 15px
      line-height: 40px
  .select-member-btn
    line-height: 1
    vertical-align: middle
